
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    	android:descendantFocusability="blocksDescendants"
    android:background="@color/uestcblue">
				<LinearLayout 
	          android:layout_width="match_parent"
        android:layout_height="match_parent"
          android:layout_marginTop="40dp"
         android:orientation="vertical"
         android:background="@color/bg_gray" >
        
			<LinearLayout 
			    android:orientation="horizontal"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:background="@drawable/notice_item_background">

	<LinearLayout android:layout_height="wrap_content"  
		android:layout_width="fill_parent"
		android:padding="5dp"
		 android:orientation="vertical">
	
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_marginRight="3.0dip">
				<!-- 活动名称-->
				<TextView
				     android:textSize="20.0dp" 
				     android:textColor="#ff333333"
					android:id="@+id/tvItemName"
					 android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 android:text="name" />
				<RelativeLayout
				     android:gravity="right"
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					android:layout_marginRight="3.0dip"
					 android:layout_weight="1.0">
				<!--距离 -->
					<TextView 
					    android:textSize="12.0dp" 
					    android:textColor="#ff666666"
					    android:layout_gravity="right" 
						android:id="@+id/tvItemDistance"
						android:layout_width="wrap_content"
						 android:layout_height="wrap_content"
						android:layout_marginLeft="3.0dip" 
						android:text="0km"
						android:layout_alignParentRight="true" />
				</RelativeLayout>
			</LinearLayout>
			<!--标签 -->

			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="3.0dip"
			    android:orientation="horizontal" >

			    <TextView
			        android:id="@+id/tvItemLabel1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_margin="2.0dip"
			        android:background="@color/uestcblue"
			        android:focusable="false"
			        android:visibility="gone"
			        android:text="标签1"
			        android:textColor="@color/white"
			        android:textSize="10.0dp" />

			    <TextView
			        android:id="@+id/tvItemLabel2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_margin="2.0dip"
			        android:background="@color/uestcblue"
			        android:focusable="false"
			        android:text="标签2"
			        android:visibility="gone"
			        android:textColor="@color/white"
			        android:textSize="10.0dp" />

			    <TextView
			        android:id="@+id/tvItemLabel3"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_margin="2.0dip"
			        android:background="@color/uestcblue"
			        android:focusable="false"
			        android:text="标签3"
			        android:visibility="gone"
			        android:textColor="@color/white"
			        android:textSize="10.0dp" />
			    <TextView
			        android:id="@+id/tvItemLabel4"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_margin="2.0dip"
			        android:background="@color/uestcblue"
			        android:focusable="false"
			        android:text="标签4"
			        android:visibility="gone"
			        android:textColor="@color/white"
			        android:textSize="10.0dp" />
			    			    <TextView
			        android:id="@+id/tvItemLabel5"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_margin="2.0dip"
			        android:background="@color/uestcblue"
			        android:focusable="false"
			        android:text="标签5"
			        android:visibility="gone"
			        android:textColor="@color/white"
			        android:textSize="10.0dp" />
			</LinearLayout>

			<!--内容 -->
			<TextView
			     android:id="@+id/tvItemContent"
			     android:textSize="15.0dp" 
			     android:textColor="#ff414951"
				 android:focusable="false"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_marginTop="10.0dip" 
				android:autoLink="all"
				android:text="活动内容" />
			 <!--其他信息 -->	
				<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_marginTop="10.0dip"
				android:layout_marginRight="3.0dip">
				<TextView
				     android:textSize="12.0dp" 
				     android:textColor="#ff333333"
					 android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 android:text="发布者：" />
			<TextView
			    	android:id="@+id/tvItemInformer"
				     android:textSize="12.0dp" 
				     android:textColor="#ff333333"
					 android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 android:text="" />	
			</LinearLayout>	
	<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5.0dip"
				android:layout_marginRight="3.0dip">
				<TextView
				     android:textSize="12.0dp" 
				     android:textColor="#ff333333"
					 android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 android:text="活动时间：" />
			<TextView
			    	android:id="@+id/tvItemStartTime"
				     android:textSize="12.0dp" 
				     android:textColor="#ff333333"
					 android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 android:text="" />	
			</LinearLayout>	
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5.0dip"
				android:layout_marginRight="3.0dip">
				<TextView
				     android:textSize="12.0dp" 
				     android:textColor="#ff333333"
					 android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 android:text="活动地点：" />
			<TextView
			    	android:id="@+id/tvItemLocation"
				     android:textSize="12.0dp" 
				     android:textColor="#ff333333"
					 android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 android:text="" />	
			</LinearLayout>	
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5.0dip"
				android:layout_marginRight="3.0dip">
				<TextView
				     android:textSize="12.0dp" 
				     android:textColor="#ff333333"
					 android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 android:text="人数限制：" />
			<TextView
			    	android:id="@+id/tvItemLimit"
				     android:textSize="12.0dp" 
				     android:textColor="#ff333333"
					 android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 android:text="" />	
			</LinearLayout>
			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5.0dip"
				android:layout_marginRight="3.0dip">
				<TextView
				     android:textSize="12.0dp" 
				     android:textColor="#ff333333"
					 android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 android:text="已报名数：" />
			<TextView
			    	android:id="@+id/tvItemPeopleNum"
				     android:textSize="12.0dp" 
				     android:textColor="#ff333333"
					 android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					 android:text="" />	
			</LinearLayout>
			
						
			<LinearLayout android:orientation="horizontal"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="5.0dip"
			    android:layout_marginRight="3.0dip">
			    <ImageView android:id="@+id/ivItemImage"
			        android:layout_width="100dp"
			        android:layout_height="100dp"
			        android:layout_margin="2.0dip"
			        android:focusable="false"
			        android:visibility="gone"  />
			</LinearLayout>
			<LinearLayout
                android:id="@+id/btJoin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical"
                android:background="@drawable/button_bg"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                      android:background="@drawable/notice_item_join" />

                <TextView
                      android:id="@+id/tvItemJoinText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="我要报名"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:gravity="center" />
    
            </LinearLayout>
	</LinearLayout>
	</LinearLayout>

<LinearLayout 
          android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical">
  
          <RadioGroup
                android:id="@+id/noticeDetail_radiogroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true" 
                android:background="@color/white"
                >
      
    
                <RadioButton
                    android:id="@+id/bt_participants"
                    style="@style/radio_style"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/navigation_item"
                  android:checked="true"
                    android:text="参与者"
                    android:textSize="15sp"
                        android:gravity="center_vertical|left"
                    android:textColor="@color/black" />
    
                <RadioButton
                    android:id="@+id/bt_comments"
                    style="@style/radio_style"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/navigation_item"                    
                    android:text="评论"
                        android:gravity="center_vertical|left"
                        android:textSize="15sp"
                    android:textColor="@color/black" />

  
             </RadioGroup>
                 <android.support.v4.view.ViewPager  
        android:id="@+id/noticeDetail_viewpager"  
        android:layout_width="fill_parent"  
        android:layout_height="match_parent" 
        android:layout_marginTop="2dp"
        android:padding="5dp"
                        android:background="@color/white">  
    </android.support.v4.view.ViewPager>     
        </LinearLayout>
</LinearLayout>
<Button
     android:id="@+id/btReturn"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_gravity="left"
    android:background="@drawable/selector_btn_back"
        android:text="返回"
    android:textSize="15sp"
    android:textColor="@color/white" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="活动详情"
    android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
    android:textColor="@color/white"
    android:textSize="18sp" />


</FrameLayout>
