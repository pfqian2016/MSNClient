<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uestcblue">
            <LinearLayout 
          android:layout_width="match_parent"
        android:layout_height="match_parent"
          android:layout_marginTop="40dp"
          android:padding="5dp"
         android:orientation="vertical"
         android:background="@color/white" >
  
          <RadioGroup
                android:id="@+id/manageNotice_radiogroup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true" 
                android:background="@color/white"
                >
      
    
                <RadioButton
                    android:id="@+id/bt_created"
                    style="@style/radio_style"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/navigation_item"
                  android:checked="true"
                    android:text="Created"
                                      android:textSize="15sp"
                    android:textColor="@color/black" />
    
                <RadioButton
                    android:id="@+id/bt_joined"
                    style="@style/radio_style"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.0"
                    android:background="@drawable/navigation_item"                    
                    android:text="Joined"
                        android:textSize="15sp"
                    android:textColor="@color/black" />

  
             </RadioGroup>
                 <android.support.v4.view.ViewPager  
        android:id="@+id/manageNotice_viewpager"  
        android:layout_width="match_parent"  
        android:layout_height="match_parent" >  
    </android.support.v4.view.ViewPager>     
        </LinearLayout>
<Button
     android:id="@+id/btReturn"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_gravity="left"
    android:background="@drawable/selector_btn_back"
        android:text="Back"
    android:textSize="15sp"
    android:textColor="@color/white" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="My Activity"
    android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
    android:textColor="@color/white"
    android:textSize="18sp" />


</FrameLayout>
